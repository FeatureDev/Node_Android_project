{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Preview Server",
      "program": "${workspaceFolder}/preview-server.js",
      "serverReadyAction": {
        "pattern": "running at (https?://[^\\s]+)",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Preview Current Page",
      "program": "${workspaceFolder}/preview-server.js",
      "serverReadyAction": {
        "pattern": "running at (https?://[^\\s]+)",
        "uriFormat": "%s/${fileBasename}",
        "action": "openExternally"
      }
    }
  ]
}
